<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=chrome">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>EMS</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp" rel="stylesheet">
        <link rel="shortcut icon" href="../CSS/hehe.png">
        <link rel="stylesheet" href="../CSS/MachineLearningForm.css">
    </head>

    <body>
        <div class="container">
            <aside>
                <div class="top">
                    <div class="logo">
                        <img src="https://cdn.discordapp.com/attachments/1075714300020269127/1075714382060847184/emslogo.gif">
                        <h2 >EMS </h2>
                    </div>
                </div>

                <hr>

                <div class="sidebar">
                    <a href="/AdminInterface" >
                        <span class="material-symbols-sharp">dashboard</span>
                        <h3> Dashboard</h3>
                    </a >
                    <a href="/Schedule">
                        <span class="material-symbols-sharp">calendar_month</span>
                        <h3>Schedule</h3>
                    </a>
                    <a href="/JobOrder" class="active">
                        <span class="material-symbols-sharp">work</span>
                        <h3>Job Order</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">settings</span>
                        <h3>Settings</h3>
                    </a>
                    <a href="#" onclick="logoutSubmit()">
                        <span class="material-symbols-sharp">logout</span>
                        <h3>Log Out</h3>
                    </a>
                </div>
            </aside>
            <!---end of aside-->
            <main>
                <h2>
                    Joblist Dashboard
                </h2>
                <div class="plus-button">
                    <button class="delete-button">
                         <span class="material-symbols-sharp" style="font-size: 30px; color: #7380ec;">cancel</span>
                    </button>
                    <button class="JOmodal-button" data-modal-target="#JOmodal">
                        <span class="material-symbols-sharp" style="font-size: 30px; color: #7380ec;">add_circle</span>
                    </button>  
                </div>
                <div class="job-list-container">
                    <div class="insights">
                        {{#each list}}
                        <div class="clickable-item" data-id="{{this._id}}">
                            <div class="project_prog">
                                <span class="material-symbols-sharp">analytics</span>
                                <div class="middle">
                                    <div class="left">
                                        <h3>Type of Work:{{this.TypeOfWork}}</h3>
                                        <h1>Client Name:{{this.name}}</h1>
                                    </div>
                                          <div class="trash-container">
                           <button class="trash-button" data-id="{{this._id}}">
                                <span class="material-symbols-sharp" style="font-size: 30px; color: #7380ec; background: none;">delete</span>
                            </button>
                        </div>
                                    <div class="progress">
                                        <svg>
                                            <circle cx='38'cy='38' r = '36'></circle>
                                        </svg>
                                        <div class="number">
                                            <p> 81% </p>
                                        </div>
                                    </div>
                                </div>
                                <small class="text-muted">Last 24 Hours</small>
                            </div> 
                        <div class="additional-info" style="display: none;" id="info-{{this._id}}">  
                            <table class="table">
                                <tr>  
                                    <th style="width: 180px;">Starting Date</th>
                                    <td>{{this.StartingDate}}</td>  
                                </tr>  
                                <tr>
                                    <th style="width: 180px;">Expected Finish Date</th>
                                    <td>{{this.ExpectedFinishDate}}</td>
                                </tr>    
                                <tr>
                                    <th style="width: 100px;">Area</th>
                                    <td>{{this.Area}}</td>
                                </tr>
                                <tr>
                                <th style="width: 100px;">Unit</th>
                                <td>{{this.Unit}}</td>
                                </tr>     
                                <tr>
                                    <th style="width: 100px;">Location</th>
                                    <td>{{this.Location}}</td>
                                </tr>         
                            </table>
                        </div>
                        </div>
                {{/each}}
                </div>       
                <div class="JOmodal" id="JOmodal">
                    <div class="JOmodal-header">
                        <div class="JOtitle">Job Order</div>
                        <button data-close-buttonJO class="JOclose-button">&times;</button>
                    </div>
                    <div class="JOmodal-body">

                        <form class="form" action="/JobOrder" method="post">
                            <table>
                                <tr>
                                    <td> <b style ="font-size: 12px">Client Name:</b> </td>
                                    <th scope="col"><input type="text" name="name" value="{{user.name}}"></th>
                                </tr>
                                <tr>
                                    <th scope="row"><label for="TypeOfWork"><b style ="font-size: 12px">Scope of Work:</b></label></th>
                                    <th scope="row">
                                    <select class="TypeofWork" name="TypeOfWork" style="font-size: 12px;">
                                        <optgroup label="Site Preparation">
                                            <option selected disabled hidden>Choose Type of Work</option>
                                            <option value="A1 - Filling and backfilling works">Filling and backfilling works</option>
                                            <option value="A2 - Excavation of soil and_or Footing Excavation ">Excavation of soil and/or Footing Excavation</option>
                                            <option value="A3 - SGravel bedding">Gravel bedding</option>  
                                            <option value="A4 - Chipping of slab">Chipping of slab</option>
                                            <option value="A5 - Chipping of existing tiles">Chipping of existing tiles</option>
                                            <option value="A6 - Chipping of existing slab for ducting">Chipping of existing slab for ducting</option>
                                            <option value="A7 - Demolish existing ceiling and wood truss">Demolish existing ceiling and wood truss</option>
                                            <option value="A8 - Demolish existing accordion door">Demolish existing accordion door</option>
                                            <option value="A9 - Demolish front wall">Demolish front wall </option>
                                            <option value="A10 - Demolish existing staircase_stairway">Demolish existing staircase/stairway</option>
                                            <option value="A11 - Demolish existing grills">Demolish existing grills</option>
                                            <option value="A12 - Demolish dilapidated roofing">Demolish dilapidated roofing</option>
                                            <option value="A13 - Site Clearing_Hauling and Disposal works">Site Clearing/Hauling and Disposal works</option>
                                        </optgroup>
                                        <optgroup label="Carpentry Works">
                                            <option value="B1 - Carpentry Works for false beam and false column ">Carpentry Works for false beam and false column</option>
                                            <option value="B2 - Carpentry Works for Main Counter (repair only) ">Carpentry Works for Main Counter (repair only)</option>
                                            <option value="B3 - Carpentry Works for Ceiling, Parapet, and Canopy">Carpentry Works for Ceiling, Parapet, and Canopy</option>
                                            <option value="B4 - Construction of Dry Wall (Interior Wall and Partition)">Construction of Dry Wall (Interior Wall and Partition)</option>
                                            <option value="B5 - Construction of Exterior Wall using Rib type GI Sheet">Construction of Exterior Wall using Rib type GI Sheet</option>
                                            <option value="B6 - Wall Cabinet and Shelves at Sink Area Installation">Wall Cabinet and Shelves at Sink Area Installation</option>
                                        </optgroup>
                                        <optgroup label="Mechanical/Metal Works">
                                            <option value="C1 - Stainless works for Main Counter (Repair only)">Stainless works for Main Counter (Repair only)</option>
                                            <option value="C2 - Rangehood and ducting (seamless design)">Rangehood and ducting (seamless design)</option>
                                            <option value="C3 - Welding works for Steel frame of Main Counter">Welding works for Steel frame of Main Counter</option>
                                            <option value="C4 - Fabrication of Steel Gate">Fabrication of Steel Gate</option>
                                            <option value="C5 - Fabrication of griller Steel Frame">Fabrication of griller Steel Frame</option>
                                            <option value="C6 - Fabrication of Steel window panel">Fabrication of Steel window panel</option>
                                            <option value="C7 - Fabrication of Steel mesh panel ">Fabrication of Steel mesh panel </option>
                                            <option value="C8 - 40cmx30cm steel louvers installation">40cmx30cm steel louvers installation</option>
                                            <option value="C9 - Installation of exhaust fans and ash screen">Installation of exhaust fans and ash screen</option>
                                            <option value="C10 - Fabrication and Installation of metal roll up door (repair)">Fabrication and Installation of metal roll up door (repair)</option>
                                            <option value="C11 - Menu Board Hooking and Installation">Menu Board Hooking and Installation</option>
                                            <option value="C12 - LPG Cage Fabrication">LPG Cage Fabrication</option>
                                            <option value="C13 - LPG Cage Fabrication">LPG Cage Fabrication</option>
                                            <option value="C14 - LPG Cage Fabrication">LPG Cage Fabrication</option>
                                        </optgroup>
                                        <optgroup label="Plumbing Works">
                                            <option value="D1 - Removal_Demolition and Disposal of debris">MRemoval/Demolition and Disposal of debris</option>
                                            <option value="D2 - Pipeline and Fixture Installation">Pipeline and Fixture Installation</option>
                                            <option value="D3 - Drainage Pipe line installation">Drainage Pipe line installation</option>
                                        </optgroup>
                                        <optgroup label="Masonry & Concrete Works">
                                            <option value="E1 - Installation of 40x40cm unglazed white tiles">Installation of 40x40cm unglazed white tiles</option>
                                            <option value="E2 - CHB works and concrete plastering">CHB works and concrete plastering</option>
                                            <option value="E3 - Concreting of slab_flooring with foundation">Concreting of slab/flooring with foundation</option>
                                            <option value="E4 - Concreting of slab at canopy area _ parking area w_ catch basin">Concreting of slab at canopy area / parking area w/ catch basin</option>
                                            <option value="E5 - Concreting of foundation_beams_columns">Concreting of foundation/beams/columns</option>
                                        </optgroup>
                                        <optgroup label="Electrical Works">
                                            <option value="F1 - Electrical Works - Main Line and Wiring Distribution System">Main Line and Wiring Distribution System</option>
                                            <option value="F2 - Electrical Works - Interior and Exterior Lightings">Interior and Exterior Lightings</option>
                                        </optgroup>
                                        <optgroup label="Painting Works">
                                            <option value="G1 - Painting Works - Plain Concrete Surfaces (Surface Prep - Primer - Finish Coat)">Plain Concrete Surfaces (Surface Prep - Primer - Finish Coat)</option>
                                            <option value="G2 - Painting Works - Wooden _ Metal Surfaces (Surface Prep - Primer - Finish Coat)">Wooden / Metal Surfaces (Surface Prep - Primer - Finish Coat)</option>
                                            <option value="G3 - Painting Works - Plain Concrete and Wooden _ Metal Surfaces (Surface Prep - Primer - Finish Coat)">Plain Concrete and Wooden / Metal Surfaces (Surface Prep - Primer - Finish Coat)</option>
                                        </optgroup>
                                        <optgroup label="Glass Works">
                                            <option value="J1 - Fabrication and installation of Aluminum frame">Fabrication and installation of Aluminum frame</option>
                                            <option value="J2 - Glass installation 1_4 thk tempered glass">Glass installation 1/4 thk tempered glass</option>
                                        </optgroup>
                                        <optgroup label="Thermal & Moisture Protection Works">
                                            <option value="K1 - Roofing Works and Framing Installation">Roofing Works and Framing Installation</option>
                                            <option value="K2 - Installation of Gutter, Flushing and Ridge Roll">Installation of Gutter, Flushing and Ridge Roll</option>
                                            <option value="K3 - Installation of ceiling Insulation">Installation of ceiling Insulation</option>
                                        </optgroup>
                                        </select>
                                    </th>
                                </tr>
                                <tr>
                                    <th scope="row"> <b style ="font-size: 12px">Unit area for the job:</b></th>
                                    <th scope="row">   
                                        <input type="text" name="Area" class="Area" placeholder="Area" size="7" maxlength="11" style="left: 10px;" autocomplete="off">
                                        <select name="Unit" id="dropdown">
                                            <option value="none" selected disabled hidden>Select an Option</option>
                                            <option value=" CubicMeter">Cubic Meter</option>
                                            <option value=" SquareMeter">Square Meter</option>
                                            <option value=" Meter">Meter</option>
                                        </select>
                                    </th>
                                </tr>
                                <tr>
                                    <th scope="row"> <b style ="font-size: 12px">Location:</b></th>
                                    <th scope="row"> <input type="text" name="Location" placeholder="Location" size="60"></th>

                                </tr>
                                <tr>
                                    <th scope="row"><label for="StartingDate"><b style ="font-size: 12px">Starting Date:</b></label></th>
                                    <th scope="row"><input type="date" name="StartingDate" style="font-size: 12px" max="2023-12-31"> </th>
                                </tr>
                                <tr>
                                    <th scope="row"><b style ="font-size: 12px">Days of Expected to Finish:</b></th>
                                    <th scope="row"> <b style ="font-size: 12px"></b>  <input type="text" name="ExpectedFinishDate" placeholder="Days" size="15">
                                </tr>
                            </table>

                            <div class="form-group"> 
                                <input type="hidden" name="name" value="{{user.name}}">
                                <input type="hidden" name="id" value="{{user.id}}">
                            </div>

                            <input type="submit" class="submit">
                        </form>
                    </div>
                </div>
                <div id="JOoverlay"></div>
            </main>
            <!--END OF MAIN-->
            <div class="right">
                <div class="top">
                    <button id="menu btn">
                        <span class="material-symbols-sharp">menu</span>
                    </button>
                </div>
                <div class="data-container hidden">
                    <h2>Entry Data</h2>
                    <div class="data-container1">
                        <div class="data-container2">
                            <div class="entry-data-container">
                                <div class="message">
                                    <div class="info-table-container" id="info-table-container">
                                        <table id="info-table">
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                    <hr>
                                    <button class="RFmodal-button" data-modal-target="#RFmodal">Recommend/Forecast</button>
                                    <div class="RFmodal" id="RFmodal">
                                        <div class="RFmodal-header">
                                            <div class="RFtitle">Output</div>
                                            <button data-close-buttonRF class="RFclose-button">&times;</button>
                                        </div>
                                        <div class="RFmodal-body">
                                            TITE MALAKI
                                            LEZGO
                                            LEZGO
                                        </div>
                                    </div>
                                    <div id="RFoverlay"></div>
                                    <hr>
                                    <div id="output" style="font-size: 15px; font-weight: 500;">Output:</div>
                                    <div class="decision-button">
                                        <button id="Accept" onclick="showOutput()">Accept</button>
                                        <button id="Reject" onclick="showOutput()">Reject</button>
                                        <button id="Validate" onclick="showOutput()">Validate</button>
                                    </div>
                                </div>    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/JS/sidebar.js"></script>
        <script src="/JS/JobOrder.js"></script>
    </body>
</html>